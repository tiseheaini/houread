<div class="well well-large" style="background-color:white;">
  <h2>注册</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: "form-horizontal"}) do |f| %>
    <%= devise_error_messages! %>

    <div class="control-group">
      <%= f.label :email, "邮箱", :class => "control-label" %>
      <div class="controls"><%= f.email_field :email, :autofocus => true %></div>
    </div>

    <div class="control-group">
      <%= f.label :password, "密码", :class => "control-label" %>
      <div class="controls"><%= f.password_field :password %></div>
    </div>

    <div class="control-group">
      <%= f.label :password_confirmation, "确认密码", :class => "control-label" %>
      <div class="controls"><%= f.password_field :password_confirmation %></div>
    </div>

    <div class="control-group">
      <div class="controls"><%= f.submit "注册", :class => "btn" %></div>
    </div>
  <% end %>
</div>
